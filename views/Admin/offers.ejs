<div class="card-body">
  
    <% const categoryOffers=offers.filter(offer=> offer.categoryOffer && offer.categoryOffer.discountPercentage !== 0);
        %>
        <% if (categoryOffers.length> 0) { %>
            <h2 class="m-3" style="text-decoration: underline;">Category Offers</h2>
            <table class="table category-offers mb-4">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Discount Percentage</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% categoryOffers.forEach(offer=> { %>
                        <tr>
                            <td>
                                <%= offer.title %>
                            </td>
                            <td>
                                <%= offer.description %>
                            </td>
                            <td>
                                <%= new Date(offer.startDate).toLocaleDateString() %>
                            </td>
                            <td>
                                <%= new Date(offer.endDate).toLocaleDateString() %>
                            </td>
                            <td>
                                <%= offer.categoryOffer.discountPercentage %>
                            </td>
                            <td>
                                <%= offer.categoryOffer.category.cName %>
                            </td>
                            <td>
                                <% if (offer.isActive) { %>
                                    <button onclick="toggleStatus('<%= offer._id %>')" class="btn btn-danger">Block</button>
                                    <% } else { %>
                                        <button onclick="toggleStatus('<%= offer._id %>')" class="btn btn-success">Activate</button>
                                        <button onclick="deleteOffer('<%= offer._id %>')" class="btn btn-danger">Delete</button>
                                        <% } %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

            <% } %>

                <!-- Product Offers -->
                <% const productOffers=offers.filter(offer=> offer.productOffer && offer.productOffer.discountPercentage
                    !== 0); %>
