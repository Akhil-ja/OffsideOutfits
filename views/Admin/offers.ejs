                <script>
                    function toggleStatus(offerId) {
                        
                        fetch('/admin/toggleOfferStatus', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ offerId }),
                        })
                            .then(response => response.json())
                            .then(data => {
                                
                                if (data.success) {
                                    
                                    location.reload(); 
                                } else {
                                 
                                    console.error('Failed to update status');
                                }
                            })
                            .catch(error => {
                                console.error('Error:', error);
                            });
                    }
                </script>
                

                <script>
                    function toggleReferalStatus(offerId) {
                        fetch('/admin/toggleReferalStatus', {
