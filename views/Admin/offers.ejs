                        <h2 class="m-3" style="text-decoration: underline;">Product Offers</h2>
                        <table class="table product-offers mb-4">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Discount Percentage</th>
                                    <th>Products</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% productOffers.forEach(offer=> { %>
                                    <tr>
                                        <td>
                                            <%= offer.title %>
                                        </td>
                                        <td>
                                            <%= offer.description %>
                                        </td>
                                        <td>
                                            <%= new Date(offer.startDate).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= new Date(offer.endDate).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= offer.productOffer.discountPercentage %>
                                        </td>
                                        <td>
                                            <%= offer.productOffer.products.map(product=> product.pname).join(', ') %>
                                        </td>
                                    <td>
                                        <% if (offer.isActive) { %>
                                            <button onclick="toggleStatus('<%= offer._id %>')" class="btn btn-danger">Block</button>
                                            <% } else { %>
                                                <button onclick="toggleStatus('<%= offer._id %>')" class="btn  btn-success">Activate</button>
