    <script>
        function validateProductOfferForm() {
            const title = document.getElementById('title').value.trim();
            const description = document.getElementById('description').value.trim();
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            const selectedProducts = document.getElementById('selectedProducts');
            const discountPercentage = document.getElementById('discountPercentage').value;
            const startDateError = document.getElementById('startDate-error');
            const endDateError = document.getElementById('endDate-error');

            if (title === '') {
                document.getElementById('title-error').textContent = 'Title cannot be empty.';
                return false;
            } else {
                document.getElementById('title-error').textContent = '';
            }

            if (description === '') {
                document.getElementById('description-error').textContent = 'Description cannot be empty.';
                return false;
            } else {
                document.getElementById('description-error').textContent = '';
            }

            const today = new Date().toISOString().split('T')[0];
            const nextDay = new Date();
            nextDay.setDate(nextDay.getDate() + 1);
            const nextDayString = nextDay.toISOString().split('T')[0];

            if (startDate < today) {
                startDateError.textContent = 'Start Date must be today or greater.';
                return false;
            } else {
                startDateError.textContent = '';
            }

            if (endDate <= today || endDate <= startDate) {
                endDateError.textContent = 'End Date must be greater than Start Date.';
                return false;
            } else {
                endDateError.textContent = '';
            }

            if (selectedProducts.selectedOptions.length === 0) {
                document.getElementById('selectedProducts-error').textContent = 'Please select at least one product.';
                return false;
            } else {
                document.getElementById('selectedProducts-error').textContent = '';
            }

            if (parseFloat(discountPercentage) < 0 || isNaN(parseFloat(discountPercentage)) || parseFloat(discountPercentage) > 99) {
                document.getElementById('discountPercentage-error').textContent = 'Discount Percentage must be between 0 and 99.';
                return false;
            } else {
                document.getElementById('discountPercentage-error').textContent = '';
            }

            return true;
        }
    </script>

