                                    document.addEventListener("DOMContentLoaded", function () {
                                        // Activate the "tab-address" tab
                                        var tabAddressLink = document.getElementById("tab-address-link");
                                        tabAddressLink.classList.add("active");

                                        var tabAddressPane = document.getElementById("tab-address");
