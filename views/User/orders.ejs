<main class="main">
    <div class="container">
        <h2 class="title mb-3">Orders List</h2>

        <ul class="list-group">
            <% AllOrders.forEach(order=> { %>
            <li class="list-group-item">
                <a href="/order-details?orderID=<%= order._id %>">
                    <h4>Order ID: <%= order._id %>
                    </h4>
                </a>
                <ul class="list-unstyled">
                    <% order.products.forEach(productInfo=> { %>
                        <li class="mb-3 row">
                            <div class="col-md-4">
                                <strong>Product Name:</strong>
                            </div>
                            <div class="col-md-8">
                                <span style="font-size: x-small;">
                                    <%= productInfo.product.pname %>
                                </span><br>
                                <strong>Quantity:</strong>
                                <%= productInfo.quantity %><br>
                                    <strong>Price:</strong>
                                    <%= productInfo.price %><br>
                            </div>
                        </li>
                        <% }); %>
                </ul>
                <strong>Order Total: <%= order.orderTotal %></strong>
            </li>
                <% }); %>
        </ul>
    </div>
</main>









