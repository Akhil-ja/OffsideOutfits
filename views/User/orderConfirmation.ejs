    <main class="main">
        <div class="container">
            <% if (newOrder.status==='payment failed') {%>
                 <h2 class="title mb-3 mt-4">Order Pending</h2>
                 <span style="color: red;">Due to failed Payment</span>
        <% }else {%>
            <h2 class="title mb-3">Order Confirmation</h2>
            <%}%>
           
        <div class="row">
            <% if (orderProducts && orderProducts.length> 0) { %>
                <% orderProducts.forEach(product=> { %>
                    <div class="col-md-4">
                        <div class="product">
                        <img src="/productAssets/<%= product.product.images[0] %>" alt="Product Image" class="img-fluid"
                            style="max-height: 100px;">

                            <h3 class="product-title">
                                <%= product.product.pname %>
                            </h3>
                            <span class="product-price">Rs:<%= product.price.toFixed(2) %></span>-/
                            <span class="Quantity">
                                <%= product.quantity %> units
                            </span>
                            <% const updatedPrice=newOrder.products.find(p=> p.product.equals(product.product._id)).price.toFixed(2); %>
                                <span class="total-price">Total: Rs:<%= updatedPrice * product.quantity.toFixed(2) %></span>-/
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p>No products in the order.</p>
                            <% } %>
        </div>


          
            <div class="mt-5">
                <h4 class="mb-3">Order Details</h4>
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Order Placed Date:
                        <span class="badge badge-primary">
                            <%= new Date(newOrder.orderDate).toLocaleDateString() %>
                        </span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Order Placed Time:
                        <span class="badge badge-primary badge-pill">
                            <%= new Date(newOrder.orderDate).toLocaleTimeString() %>
                        </span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Shipping Address:
                        <span class="badge ">
                            <%= orderAddress.AddName %> <br>
                                <%= orderAddress.House %> <br>
                                    <%= orderAddress.street %> <br>
                                        <%= orderAddress.state %>, <%= orderAddress.city %>,
                                                <%= orderAddress.PIN %> <br>
                        </span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Total Payable Amount:
                    
                        <span style="font-weight: 800;">
                        Rs:<%= updatedTotalAmount.toFixed(2) %>
                        </span>
                    </li>
                </ul>
            </div>

            
        <div class="mt-4 ml-5">
            <a href="/profile?selected=orders" class="btn btn-secondary m-5">View Orders</a>
            
        </div>
        </div><!-- End .container -->
    </main>





